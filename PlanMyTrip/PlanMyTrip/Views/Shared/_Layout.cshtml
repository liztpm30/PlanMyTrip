<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlanMyTrip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/foontawesome/css/all.min.css" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
</head>
<body onload="onLoad();">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" id="navbar-layout">
            <div class="container-fluid">
                <div class="row" id="navbar-row">
                    <div class="col-6">
                        <a class="navbar-brand" asp-controller="Home" asp-action="HomePage">PlanMyTrip</a>
                    </div>
                    <div class="col-6">
                        <div class="d-flex justify-content-end" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdownMenuLink">
                                        <li><a class="dropdown-item userLoggedIn">Hi <span id="userName">user</span>!</a></li>
                                        <li><a class="dropdown-item userNotLoggedIn" asp-controller="Home" asp-action="Login">Login</a></li>
                                        <li><a class="dropdown-item userNotLoggedIn" asp-controller="Home" asp-action="Create">Create Account</a></li>
                                        <li><a class="dropdown-item userLoggedIn" asp-controller="Home" asp-action="HomePage">See Itineraries</a></li>
                                        <li><a class="dropdown-item userLoggedIn" onclick="logOut();">Logout</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container pb-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer">
        <div class="container mt-4">
            <div class="row d-flex justify-content-center">
                Contact us
            </div>
            <div class="row d-flex justify-content-center">
                <div class="col-1 d-flex justify-content-center my-4"><i class="fab fa-instagram"></i></div>
                <div class="col-1 d-flex justify-content-center my-4"><i class="fab fa-facebook"></i></div>
                <div class="col-1 d-flex justify-content-center my-4"><i class="fab fa-twitter"></i></div>
                <div class="col-1 d-flex justify-content-center my-4"><i class="fas fa-envelope"></i></div>
            </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/b446aed76a.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://www.gstatic.com/firebasejs/8.3.2/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.3.2/firebase-analytics.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.3.2/firebase-auth.js"></script>

    <script src="~/js/home.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/create.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
